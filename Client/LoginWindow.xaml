<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="400" ResizeMode="NoResize">
    <Grid Height="430" VerticalAlignment="Bottom">
        <PasswordBox x:Name="PasswordText" HorizontalAlignment="Center" Margin="0,227,0,0" VerticalAlignment="Top" Width="380" Height="24"/>
        <TextBox x:Name="LoginText" HorizontalAlignment="Center" Margin="0,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Height="25"/>
        <Button Content="Проверка" HorizontalAlignment="Left" Margin="150,281,0,0" VerticalAlignment="Top" Height="22" Width="80" Click="Button_Click"/>
        <Button x:Name="Regist" Content="Регистрация" HorizontalAlignment="Center" Margin="0,407,0,0" VerticalAlignment="Top" Height="22" Width="400" Click="Regist_Click"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
